{
    "extends": "airbnb",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "rules": {
    "semi": 2,
    "import/no-extraneous-dependencies": [
      "error", {
        "devDependencies": true
      }]
    },
    "globals": {
      "describe": true,
      "it": true,
      "expect": true,
      "app": true,
      "td": true,
      "beforeEach": true,
      "afterEach": true,
      "before" : true,
      "setupApp" : true,
      "supertest" : true,
      "request": true,
      "Joi": true,
      "joiAssert": true
    }
}
